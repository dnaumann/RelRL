{
  "name": "whyrel-language-support",
  "displayName": "WhyRel Language Support",
  "description": "Language support for WhyRel relational verification language",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Programming Languages"],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:whyrel"
  ],
  "contributes": {
    "languages": [
      {
        "id": "whyrel",
        "aliases": ["WhyRel", "whyrel"],
        "extensions": [".rl"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "whyrel",
        "scopeName": "source.whyrel",
        "path": "./syntaxes/whyrel.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "whyrel.restart",
        "title": "Restart WhyRel Extension",
        "category": "WhyRel"
      }
    ],
    "configuration": {
      "title": "WhyRel",
      "properties": {
        "whyrel.binaryPath": {
          "type": "string",
          "description": "./bin/whyrel",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}