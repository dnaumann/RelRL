module FREL
  use prelude.Prelude
  use State
  use A
  use B
  
  let counter_diff (l_s : state) (r_s : state) (pi : PreRefperm.t) (l_t : int) (r_t : int) : 
    (int, int)
    requires { okRefperm l_s r_s pi }
    requires { (l_t = r_t) }
    ensures { okRefperm l_s r_s pi }
    
    ensures { match result with
              | (l_result, r_result) -> l_result = 0 - r_result
              end }
    diverges
  = label INIT in
      let r_result = ref 0 in
      let l_result = ref 0 in
      let l_t = ref l_t in
      let r_t = ref r_t in
      let l_k = ref 0 in
      let r_k = ref 0 in
      let l_x = ref 0 in
      let r_x = ref 0 in
      (l_k := ([@expl:k := t] (! l_t)));
      (r_k := ([@expl:k := t] (! r_t)));
      (l_result := ([@expl:result := 0] 0));
      (r_result := ([@expl:result := 0] 0));
      (l_x := ([@expl:havoc x] (any int)));
      assert { exists r_x : int. r_x = 0 - (! l_x) };
      (r_x := ([@expl:havoc x] (any int)));
      assume { (! r_x) = 0 - (! l_x) };
      while ((! l_k) > 0) do
        invariant { okRefperm l_s r_s pi }
        invariant { ((! l_result) = (0 - (! r_result))) }
        invariant { ((! l_k) = (! r_k)) }
        invariant { ((! l_t) = (! r_t)) }
        invariant { [@expl:lockstep] (((! l_k) > 0) = ((! r_k) > 0)) }
        (l_k := ([@expl:k := k - 1] ((! l_k) - 1)));
        (r_k := ([@expl:k := k - 1] ((! r_k) - 1)));
        (l_result := ([@expl:result := result + x] ((! l_result) + (! l_x))));
        (r_result := ([@expl:result := result + x] ((! r_result) + (! r_x))))
      done;
      ((! l_result), (! r_result))
end

