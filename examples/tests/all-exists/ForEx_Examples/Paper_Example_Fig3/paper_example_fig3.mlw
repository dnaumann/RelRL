module A
  use prelude.Prelude
  use State
  use I
  
  let paper_example_fig3 (s : state) (a : int) : int
    diverges
  = label INIT in
      let result = ref 0 in
      let a = ref a in
      let k = ref 0 in
      let x = ref 0 in
      let t = ref false in
      (k := ([@expl:k := a] (! a)));
      (x := ([@expl:havoc x] (any int)));
      (t := ([@expl:havoc t] (any bool)));
      while ! t do
        invariant { alloc_does_not_shrink (old s) s }
        (t := ([@expl:havoc t] (any bool)));
        (x := ([@expl:x := x + 1] ((! x) + 1)))
      done;
      (result := ([@expl:result := x] (! x)));
      while ((! result) > 0) do
        invariant { alloc_does_not_shrink (old s) s }
        (result := ([@expl:result := result - 1] ((! result) - 1)));
        (k := ([@expl:k := k + x] ((! k) + (! x))))
      done;
      (! result)
end

