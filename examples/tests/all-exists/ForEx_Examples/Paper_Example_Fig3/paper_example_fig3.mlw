module FREL
  use prelude.Prelude
  use State
  use A
  use B
  
  let paper_example_fig3 (l_s : state) (r_s : state) (pi : PreRefperm.t) (l_a : int) (r_a : int) : 
    (int, int)
    requires { okRefperm l_s r_s pi }
    requires { (l_a = r_a) }
    ensures { okRefperm l_s r_s pi }
    
    ensures { match result with
              | (l_result, r_result) -> (l_result = r_result)
              end }
    diverges
  = label INIT in
      let r_result = ref 0 in
      let l_result = ref 0 in
      let l_a = ref l_a in
      let r_a = ref r_a in
      let l_k = ref 0 in
      let r_k = ref 0 in
      let l_x = ref 0 in
      let r_x = ref 0 in
      let l_t = ref false in
      (l_k := ([@expl:k := a] (! l_a)));
      (r_k := ([@expl:k := a] (! r_a)));
      (l_x := ([@expl:havoc x] (any int)));
      (l_t := ([@expl:havoc t] (any bool)));
      while ! l_t do
        invariant { okRefperm l_s r_s pi }
        (l_t := ([@expl:havoc t] (any bool)));
        (l_x := ([@expl:x := x + 1] ((! l_x) + 1)))
      done;
      assert { exists r_x : int. ((! l_x) = r_x) };
      (r_x := ([@expl:havoc x] (any int)));
      assume { ((! l_x) = (! r_x)) };
      (l_result := ([@expl:result := x] (! l_x)));
      (r_result := ([@expl:result := x] (! r_x)));
      while ((! l_result) > 0) do
        invariant { okRefperm l_s r_s pi }
        invariant { ((! l_result) = (! r_result)) }
        invariant { [@expl:lockstep] (((! l_result) > 0) = ((! r_result) > 0)) }
        (l_result := ([@expl:result := result - 1] ((! l_result) - 1)));
        (r_result := ([@expl:result := result - 1] ((! r_result) - 1)));
        (l_k := ([@expl:k := k + x] ((! l_k) + (! l_x))));
        (r_k := ([@expl:k := k + x] ((! r_k) + (! r_x))))
      done;
      ((! l_result), (! r_result))
end

